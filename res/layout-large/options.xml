<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/options_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/options_text" />

     <ImageView
         android:id="@+id/clear_scores_btn"
         android:layout_width="260dp"
         android:layout_height="260dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
  		 android:onClick = "clearScore"
         android:src="@drawable/clear_scores_btn" />
     
    <ImageView
        android:id="@+id/checkbox2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignLeft="@+id/checkbox1"
        android:layout_centerVertical="true"
        android:src="@drawable/game_circle"/>

     <ImageView
         android:id="@+id/checkbox1"
         android:layout_width="160dp"
         android:layout_height="160dp"
         android:layout_above="@+id/checkbox2"
         android:layout_marginRight="40dp"
         android:layout_toLeftOf="@+id/checkbox2_title"
         android:src="@drawable/game_circle" />

     <ImageView
         android:id="@+id/checkbox2_title"
         android:layout_width="260dp"
         android:layout_height="260dp"
         android:layout_alignLeft="@+id/checkbox1_title"
         android:layout_centerVertical="true"
         android:src="@drawable/sound_text" />

     <ImageView
         android:id="@+id/checkbox1_title"
         android:layout_width="260dp"
         android:layout_height="260dp"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/options_title"
         android:layout_marginRight="71dp"
         android:layout_marginTop="35dp"
         android:src="@drawable/music_text" />

</RelativeLayout>
